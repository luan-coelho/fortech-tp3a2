@model FortechTP3A2.Models.SolicitacaoServico

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar solicitação</h1>

<hr />
<div class="container row d-flex justify-content-center w-100">
    <div class="col-md-4 w-100 form-row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="col-md- mb-4">
                <div class="form-group">
                    <label asp-for="Detalhes" class="control-label"></label>
                    <input asp-for="Detalhes" class="form-control" />
                    <span asp-validation-for="Detalhes" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Eletronicos" class="control-label"></label>
                <select asp-for="Eletronicos" class="form-control" asp-items="ViewBag.Eletronicos"></select>
                <span asp-validation-for="Eletronicos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TiposServico" class="control-label"></label>
                <select asp-for="TiposServico" class="form-control" asp-items="ViewBag.TiposServico"></select>
                <span asp-validation-for="TiposServico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
