@model FortechTP3A2.Models.Eletronico

@{
    ViewData["Title"] = "Create";
}

<h3>Cadastrar eletrônico</h3>

<hr/>
<div class="container container-fluid d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroNotaFiscal" class="control-label"></label>
                <input asp-for="NumeroNotaFiscal" class="form-control"/>
                <span asp-validation-for="NumeroNotaFiscal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFabricao" class="control-label"></label>
                <input asp-for="DataFabricao" class="form-control"/>
                <span asp-validation-for="DataFabricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" rows="4" class="form-control" ></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeloId" class="control-label"></label>
                <select asp-for="ModeloId" class="form-control" asp-items="ViewBag.ModeloId" >
                    <option>Selecione</option>
                </select>
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-action="Index" class="btn btn-secondary">Voltar para listagem</a>
                <input type="submit" value="Cadastrar" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}